<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
	<mapped-superclass name="ItAces\ACL\Entities\EntityPermission">
		<lifecycle-callbacks>
			<lifecycle-callback type="prePersist" method="onBeforeAdd" />
			<lifecycle-callback type="postPersist" method="onAfterAdd" />
			<lifecycle-callback type="preUpdate" method="onBeforeUpdate" />
			<lifecycle-callback type="postUpdate" method="onAfterUpdate" />
			<lifecycle-callback type="preRemove" method="onBeforeDelete" />
			<lifecycle-callback type="postRemove" method="onAfterDelete" />
		</lifecycle-callbacks>
		<indexes>
			<index name="entitypermission_permission_index" columns="permission" />
			<index name="entitypermission_model_index" columns="model" />
			<index name="entitypermission_role_id_index" columns="role_id" />
			<index name="entitypermission_created_at_index" columns="created_at" />
			<index name="entitypermission_updated_at_index" columns="updated_at" />
			<index name="entitypermission_created_by_index" columns="created_by" />
			<index name="entitypermission_updated_by_index" columns="updated_by" />
		</indexes>
		<unique-constraints>
			<unique-constraint name="entitypermission_enity_role_unique" columns="model,role_id" />
		</unique-constraints>
		<id name="id" type="integer" column="id">
			<options>
				<option name="unsigned">1</option>
			</options>
			<generator strategy="IDENTITY" />
		</id>
		<field name="createdAt" type="datetime" column="created_at" nullable="false" />
		<field name="updatedAt" type="datetime" column="updated_at" nullable="true" />
		<field name="permission" type="integer" nullable="false">
			<options>
				<option name="unsigned">1</option>
			</options>
		</field>
		<field name="model" type="string" length="255" nullable="false">
			<options>
				<option name="fixed" />
			</options>
		</field>
		<many-to-one field="role" target-entity="App\Model\Role" fetch="LAZY">
			<cache usage="NONSTRICT_READ_WRITE" />
			<cascade>
				<cascade-persist />
				<cascade-merge />
				<cascade-refresh />
			</cascade>
			<join-columns>
				<join-column name="role_id" referenced-column-name="id" nullable="false" />
			</join-columns>
		</many-to-one>
		<many-to-one  field="createdBy" target-entity="App\Model\User" fetch="LAZY">
			<cache usage="NONSTRICT_READ_WRITE" />
			<join-columns>
				<join-column name="created_by" referenced-column-name="id" nullable="false" />
			</join-columns>
		</many-to-one>
		<many-to-one field="updatedBy" target-entity="App\Model\User" fetch="LAZY">
			<cache usage="NONSTRICT_READ_WRITE" />
			<join-columns>
				<join-column name="updated_by" referenced-column-name="id" />
			</join-columns>
		</many-to-one>
	</mapped-superclass>
</doctrine-mapping>
