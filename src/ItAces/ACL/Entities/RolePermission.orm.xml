<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
	<mapped-superclass name="ItAces\ACL\Entities\RolePermission">
		<indexes>
			<index name="rolepermission_permission_index" columns="permission" />
			<index name="rolepermission_role_id_index" columns="role_id" />
			<index name="rolepermission_created_at_index" columns="created_at" />
			<index name="rolepermission_updated_at_index" columns="updated_at" />
			<index name="rolepermission_deleted_at_index" columns="deleted_at" />
			<index name="rolepermission_created_by_index" columns="created_by" />
			<index name="rolepermission_updated_by_index" columns="updated_by" />
			<index name="rolepermission_deleted_by_index" columns="deleted_by" />
		</indexes>
		<unique-constraints>
			<unique-constraint name="rolepermission_role_unique" columns="role_id" />
		</unique-constraints>
		<field name="permission" type="integer" nullable="false">
			<options>
				<option name="unsigned">1</option>
			</options>
		</field>
		<many-to-one field="role" target-entity="App\Model\Role" fetch="LAZY">
			<cache usage="NONSTRICT_READ_WRITE" />
			<cascade>
				<cascade-persist />
				<cascade-merge />
				<cascade-refresh />
			</cascade>
			<join-columns>
				<join-column name="role_id" referenced-column-name="id" nullable="false" />
			</join-columns>
		</many-to-one>
	</mapped-superclass>
</doctrine-mapping>
